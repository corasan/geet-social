<h1>Repos</h1>
<div class="mdl-grid">
  <% @repos.each do |el| %>
    <% repo_url = el["html_url"] %>
    <div class="mdl-cell mdl-cell--4-col">
      <div class="square-card mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text"><%= el["name"] %></h2>
        </div>
        <div class="mdl-card__supporting-text">
          <%= el["description"] %>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <%= link_to "Go to Repository", repo_url, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect",
          target: "_blank" %>
        </div>
      </div>
    </div>

  <% end %>
</div>
